datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String      @id @default(cuid())
  email         String      @unique
  spotifyId     String      @unique
  name          String?
  image         String?
  playlists     Playlist[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model Playlist {
  id                String      @id @default(cuid())
  spotifyPlaylistId String?     @unique
  name              String
  description       String?
  seedTracks        Json
  generatedTracks   Json
  audioFeatures     Json?
  aiReasoning       Json?
  userId            String
  user              User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  @@index([userId])
}